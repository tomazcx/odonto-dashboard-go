package views

import "github.com/tomazcx/odonto-dashboard-go/components"
import "github.com/tomazcx/odonto-dashboard-go/views/shared"

templ Login() {
	@shared.Base("Login") {
		<main class="bg-sky-200 min-h-screen">
			<form class="bg-white rounded-lg shadow-lg p-8 flex flex-col gap-4 w-11/12 max-w-[400px] top-1/2 left-1/2 absolute -translate-x-1/2 -translate-y-1/2">
				<h1 class="text-xl font-semibold text-center uppercase ">Login</h1>
				<p class="text-center text-slate-800">Fa√ßa o login para acessar o sistema</p>
				@components.Input(components.InputProps{Type: "text", Name: "login", Label: "Login"})
				@components.Input(components.InputProps{Type: "password", Name: "Password", Label: "Password"})
				@components.Button(components.ButtonProps{Type: "button", Variant: "primary", Label: "Submit"}, "w-full")
			</form>
		</main>
	}
}
