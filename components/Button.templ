package components

type ButtonProps struct {
	Label 	string
    Type  	string
	Variant	string
}

templ Button(props ButtonProps){
	<button 
		type={props.Type} 
		class={
			"rounded-lg w-full px-8 py-2 text-white font-semibold transition-opacity ",
			templ.KV("bg-sky-400", props.Variant == "primary"),
			templ.KV("bg-rose-400", props.Variant == "danger"),
			templ.SafeClass("hover:opacity-90"),
		}>
		{props.Label}
	</button>
}